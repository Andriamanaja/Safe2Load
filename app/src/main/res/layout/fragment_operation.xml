<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_operation"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OperationFragment">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/bnt_clcc_chargement"
            android:layout_width="215dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="25dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="CLCC - Chargement"
                    android:textColor="@color/black_overlay" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/bnt__clcc_dechargement"
            android:layout_width="215dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="25dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/cardview_dark_background"
                    android:text="CLCC-DÃ©chargement" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/bnt_clcp"
            android:layout_width="215dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="25dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/black_overlay"
                    android:text="CLCP" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/bnt_clcc_baremage"
            android:layout_width="215dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="25dp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="10dp" >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/cardview_dark_background"
                    android:text="CLCC - Baremage" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floating_btn_operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/colorPrimaryDark"
                app:srcCompat="@drawable/ic_add_black_24dp" />
        </RelativeLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
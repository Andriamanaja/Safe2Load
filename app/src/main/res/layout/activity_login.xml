<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/img_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="-256dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="223dp"
                android:layout_height="116dp"
                android:layout_alignBottom="@id/field_container"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/ic_splash"
                tools:ignore="NotSibling" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/field_container"
            android:layout_width="375dp"
            android:layout_height="215dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            android:background="#f2f2f2"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="266dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Nom d'utilisateur :"
                android:textColor="@color/black_text"

                android:visibility="visible" />

            <EditText
                android:id="@+id/field_login"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:drawableLeft="@drawable/ic_user"
                android:inputType="textPersonName"
                android:textColor="@color/black_text" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="false"
                android:layout_marginTop="80dp"
                android:paddingLeft="10dp"
                android:text="Mot de passe"
                android:textColor="@color/black_text" />


            <EditText
                android:id="@+id/field_pswd"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_psw"
                android:drawableRight="@drawable/ic_look"
                android:textColor="@color/black_text" />

            <android.support.v7.widget.CardView
                android:id="@+id/bnt_connect"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="20dp"
                android:background="@color/btn_primary" >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/cardview_light_background"
                        android:text="Se connecter" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="#00FFFFFF"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#00FFFFFF"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Mot de passe oublié ?"
                        android:textColor="#A0A3A7" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <!-- <Button
                 android:id="@+id/button3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentBottom="true"
                 android:layout_marginLeft="130dp"
                 android:layout_marginRight="0dp"
                 android:layout_marginBottom="10dp"
                 android:text="Se connecter"
                 android:textColor="#FFFFFF" />

             <Button
                 android:id="@+id/button4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentBottom="true"
                 android:layout_marginRight="10dp"
                 android:layout_marginBottom="10dp"
                 android:text="Mot de pass oublié ?" /> -->

        </RelativeLayout>
    </RelativeLayout>



</android.support.constraint.ConstraintLayout>